package ch1;

import java.util.Scanner;

public class Control3 {
//	switch (값) {
//	case value : {
//		실행문 ;
//		break;
//	}case value2 : {
//		실행문 ; 
//		break; 
//	}
//	default : 
//		실행문;
//	}
	public static void main(String[] args) {
		int day = 1;
		System.out.print("일(0), 월(1), 화(2), 수(3), 목(4), 금(5), 토(6) : ");
		Scanner scanner = new Scanner(System.in);
		String text = "";
		day = scanner.nextInt();
		switch(day) {
			case 0:
				text = "일";
				break;
			case 1 :
				text = "월";
				break;
			case 2 :
				text = "화";
				break;
			case 3 :
				text = "수";
				break;
			case 4 :
				text = "목";
				break;
			case 5 :
				text = "금";
				break;
			case 6 :
				text = "토";
				break;
			default : 
				System.out.println("정해진 숫자만 입력하세요.");
		}
		if(!text.equals(""))	{
			System.out.println("오늘은 " + text + "요일입니다.");
		}
		
	}

}
